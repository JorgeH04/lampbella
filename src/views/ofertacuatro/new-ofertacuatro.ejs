<% include ../partials/_header %>



<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Agregue un nuevo producto</h3>
    </div>
    <div class="card-body">
      <form action="/ofertacuatro/new-ofertacuatro" method="POST">



   
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="name" autofocus/>
        </div>
       <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="title" autofocus/>
        </div>
        <div class="form-group">
            <input type="text" name="image" class="form-control" placeholder="imagen 1" autofocus/>
          </div>
          <div class="form-group">
            <input type="text" name="imagedos" class="form-control" placeholder="imagen 2" autofocus/>
          </div>
          <div class="form-group">
            <input type="text" name="imagetres" class="form-control" placeholder="imagen 3" autofocus/>
          </div>
                 <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="descripcion" autofocus/>
          </div>
                 <div class="form-group">
            <input type="text" name="price" class="form-control" placeholder="precio" autofocus/>
          </div>



        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


<section id="product">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Bellaâ€™s Products</h2>
        </div>
        <div class="col-12">
          <div class="row product-slide">
            
            
            <% ofertacuatro.forEach(function (ofertacuatr) { %>
            <div class="col-lg-3 text-center">
              <figure>
                <div class="product-item">
                  <img src="<%= ofertacuatr.image %>" alt="Product Image">
                </div>
                <figcaption>
                  <h4 class="title"><%= ofertacuatr.title %></h4>
               
                  <h4>Price: $<%= ofertacuatr.price %></h4>
                  <ul class="cart-list icon-btn">
                      <a class="btn btn-danger" href="/ofertacuatro/delete/<%= ofertacuatr.id %>">
                        Eliminar
                    </a>
                    <a class="btn btn-primary" href="/ofertacuatro/edit/<%= ofertacuatr.id %>">
                       Editar
                    </a>
                    
                  </ul>
                </figcaption>
              </figure>
            </div>
            <% }) %>

            
           
          </div>
        </div>
       
      </div>
    </div>
  </section>



        <% include ../partials/_footer %>
        