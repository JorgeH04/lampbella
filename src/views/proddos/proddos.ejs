<% include ../partials/_header %>




	<!--================ Breadcumb Part HTML Start ======================-->

	<section id="breadcumb" style="background:url(images/grid-view/banner.jpg) no-repeat center;background-size:cover; background:slategrey">
		<div class="bnr-overlay">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 text-center p-0">
						<h1>Product Grid View</h1>
						<ul>
							<li><a href="index.html">Home</a></li>
							<li><i class="fas fa-angle-right"></i></li>

							<li><a href="product-grid.html">Product Grid View</a></li>

						</ul>

					</div>
				</div>
			</div>
		</div>
	</section>

	<!--================ Breadcumb Part HTML End ======================-->

	<!--================ All Product Part HTML Start ======================-->

	<section id="all-product" class="product-grid-sagor">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="row grid-border m-0">
						<div class="col-5 col-lg-3 col-sm-4 grid-view">
							<ul>
								<li><a class="active" href="product-grid.html"><i class="fas fa-th"></i></a></li>
								<li><a href="product-listview.html"><i class="fas fa-th-list"></i></a></li>
							</ul>
						</div>
						<div class="col-12 col-lg-6 col-sm-8 sort-by">
							<form class="form-right">
								<select onchange="location = this.value;">
									<option value="">Categor√≠as</option>
									<option value="/produnoindex/1">Sort by: Name</option>
									<option value="">Sort by: Size</option>
									<option value="">Sort by: Date</option>
								</select>
							</form>
						</div>
						
						<div class="col-12 col-lg-3 col-sm-4 p-show">
							<P></P>
						</div>
					</div>
				</div>



				<div class="col-12">
					<div class="row">

              <% proddos.forEach(function (proddo) { %>
						<div class="col-lg-3 col-sm-6 text-center">
							<figure>
								<div class="product-item">
										<a class="abs-reflect" href="/proddosredirect/<%= proddo.id %>">
									<img src="<%= proddo.image %>" class="img-fluid" alt="Product Image">
								    </a>
								</div>
								<figcaption>
									<h4 class="title"><%= proddo.title %></h4>
									<ul class="review">
										<li><i class="fas fa-star"></i></li>
										<li><i class="fas fa-star"></i></li>
										<li><i class="fas fa-star"></i></li>
										<li><i class="fas fa-star"></i></li>
										<li><i class="fas fa-star"></i></li>
									</ul>
									<h4>Price: $<%= proddo.price %></h4>
									<ul class="cart-list icon-btn">
										<li><a class="abs-reflect" href="#"><i class="fas fa-heart"></i></a></li>
										<li><a class="abs-reflect" href="/addtocardproddos/<%= proddo.id %>"><i class="fas fa-cart-plus"></i></a></li>
										<li><a class="abs-reflect" href="/proddosredirect/<%= proddo.id %>"><i class="fas fa-eye"></i></a></li>
									</ul>
								</figcaption>
              </figure>
            </div>
			<% }) %>



					</div>
				</div>
				<div class="col-12 text-center">
						<% if(pages > 0) { %> 
					<div class="page-border">
						<ul>
							<li>Page: </li>
							<% if(current == 1) { %>
							<li><a href="#">First</a></li>
							<% } else { %>
							<li><a href="/proddosindex/1">01</a></li>
							<% } %>
							<% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
							<% if(i !== 1) { %>
							<li class="noorsagor163"><a href="#">...</a></li>
							<% } %>
							<% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
							<% if(i == current) { %>
								<li class="page-item active">
										<a class="page-link" href="<%= i %>">
										  <%= i %>
										</a>
									  </li>
									<% } else { %>
									  <li class="page-item">
										<a class="page-link" href="/proddosindex/<%= i %>">
										  <%= i %>
										</a>
									  </li>
									<% } %>
									<% if (i == Number(current) + 4 && i < pages) { %>
										<li class="page-item disabled">
										  <a class="page-link" href="#">...</a>
										</li>
									 <% } %>
								   <% } %>
								   <% if(current == pages) { %>
									<li class="page-item disabled">
									  <a class="page-link" href="#">
										Last
									  </a>
									</li>
								  <% } else { %>

							<li><a href="#">2010</a></li>
							<li><a href="#"><i class="fas fa-caret-right"></i></a></li>
							<% } %>
						</ul>
					</div>
				</div>
				<% } %>

			</div>
		</div>
	</section>

	<!--================ All Product Part HTML End ======================-->



  <% include ../partials/_footer %>